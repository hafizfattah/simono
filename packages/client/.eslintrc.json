{
  "extends": ["next/core-web-vitals", "next", "eslint:recommended"],
  "globals": {
    "React": "readonly" // React is a global variable in the browser
  },
  "env": {
    "es6": true,
    "jest": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": "error",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "import/extensions": "off"
  }
}
